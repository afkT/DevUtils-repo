<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar2" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dialog 提示 -->

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <!-- 常用 Dialog 样式 -->

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 设置透明度 -->

    <style name="Theme.Light.FullScreenDialogOperate" parent="@style/Theme.Light.FullScreenDialogAct">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>

    <!-- 设置跳转样式 -->

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- Button 默认样式 -->

    <style name="AppTheme.Base_Button" parent="Widget.AppCompat.Button">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">@dimen/dp_50</item>
        <!-- 设置向上边距 -->
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 字体居中 -->
        <item name="android:gravity">center</item>
        <!-- 不绘制边距 -->
        <item name="android:includeFontPadding">false</item>
        <!-- 表示可以点击 -->
        <item name="android:clickable">true</item>
    </style>

    <!-- TextView 默认样式 -->

    <style name="AppTheme.Base_TextView">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 不绘制边距 -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- TextView 边距样式 -->

    <style name="AppTheme.margin_TextView">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置向上边距 -->
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <!-- 设置向下边距 -->
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="textAllCaps">false</item>
    </style>

</resources>