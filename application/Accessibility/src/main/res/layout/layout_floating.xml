<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_ddaaaaaa"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8.0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vid_package_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="packageName"
            android:textColor="@color/color_55"
            android:textSize="14.0sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8.0dp"
            android:background="@color/color_77" />

        <TextView
            android:id="@+id/vid_class_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dp"
            android:text="ClassName"
            android:textColor="@color/color_33"
            android:textSize="18.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/vid_close_iv"
        android:layout_width="20.0dp"
        android:layout_height="20.0dp"
        android:layout_marginLeft="8.0dp"
        android:src="@mipmap/icon_close"
        app:tint="@color/color_55" />
</LinearLayout>